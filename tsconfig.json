    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": false,
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "test", "bench"]
}
